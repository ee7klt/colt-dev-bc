<% include partials/header %>
<div class="ui main text container">
  <div class="ui huge header">
    RESTful Blog App
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">

      <% blogs.forEach((x) => { %>
        <div class="item">
          <div class="image">
              <img src=<%= x.image %>>
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%= x._id%>"><%= x.title %></a>
            <div class="meta">
              <span><%= x.created.toDateString() %></span>
            </div>
            <div class="description">
                <%- x.body.substring(0,99) %>...
            </div>
            <div class="extra">

              <a class="ui floated basic violet button" href="/blogs/<%= x._id%>">
                Read More
                <i class="right chevron icon small" id="more"></i>
              </a>
            </div>
          </div>


        </div>

      <br />
      <% }) %>
    </div>
  </div>


</div>
<% include partials/footer %>
