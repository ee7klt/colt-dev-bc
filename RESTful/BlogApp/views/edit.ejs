
<% include partials/header %>
<div class="ui main text container segment">
<div class="ui huge header">
  Edit Blog <%= blog.id %>
</div>



<form action="/blogs/<%= blog.id %>" method="POST" class="ui form">

<div class="field">
    <label>Title</label>
  <input value='<%= blog.title %>' name="blog[title]" type="text" />
</div>

<div class="field">
    <label>Image URL</label>
<input value='<%= blog.image %>' name="blog[image]" type="text" />
</div>
<div class="field">
      <label>Body</label>
      <textarea  name="blog[body]" type="text"><%= blog.body %></textarea>
</div>
<button class="ui primary basic  button" type="submit">Add Post</button>
</form>
</div>
<% include partials/footer %>
