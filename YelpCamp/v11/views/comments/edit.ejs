<% include ../partials/header %>

<div class="new-container">
  <h1>Edit Comment</h1>
  <form action="/campgrounds/<%= camp_id %>/comments/<%= comment_id %>?_method=PUT" method="POST">
    <div class="mdl-textfield mdl-js-textfield">
      <textarea class="mdl-textfield__input" type="text" rows= "3" name="comment" ><%=comment.comment %></textarea>
       <label class="mdl-textfield__label" for="comment">Comment</label>
    </div>
    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
      Submit!
    </button>
  </form>
</div>

<% include ../partials/footer %>
